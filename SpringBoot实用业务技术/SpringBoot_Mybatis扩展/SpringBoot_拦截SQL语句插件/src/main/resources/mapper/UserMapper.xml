<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserMapper">

    <resultMap id="userMap" type="com.example.entity.User">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tenantId" column="tenant_id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="passWord" column="pass_word" jdbcType="VARCHAR"/>
        <result property="commodity" column="commodity" jdbcType="VARCHAR"/>
        <result property="color" column="color" jdbcType="VARCHAR"/>
        <result property="number" column="number" jdbcType="INTEGER"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="createDate" column="create_date"
                jdbcType="TIMESTAMP"/>
        <result property="updatedDate" column="updated_date"
                jdbcType="TIMESTAMP"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="INTEGER"/>
        <result property="version" column="version" jdbcType="INTEGER"/>
    </resultMap>

    <!--根据 Id 查询，并且会在拦截其中拼接上租户Id-->
    <select id="queryById" resultMap="userMap">
        select id,
               tenant_id,
               user_name,
               pass_word,
               commodity,
               color,
               number,
               price,
               create_date,
               updated_date,
               delete_flag,
               version
        from user
        where id = #{id}
    </select>

    <!--根据 Id 查询-->
    <select id="queryByIdIgnoreTenant" resultMap="userMap">
        select id,
               tenant_id,
               user_name,
               pass_word,
               commodity,
               color,
               number,
               price,
               create_date,
               updated_date,
               delete_flag,
               version
        from user
        where id = #{id}
    </select>

    <!--查询全部-->
    <select id="queryAll" resultMap="userMap">
        select id,
               tenant_id,
               user_name,
               pass_word,
               commodity,
               color,
               number,
               price,
               create_date,
               updated_date,
               delete_flag,
               version
        from user
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="tenantId != null">
                and tenant_id = #{tenantId}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="passWord != null and passWord != ''">
                and pass_word = #{passWord}
            </if>
            <if test="commodity != null and commodity != ''">
                and commodity = #{commodity}
            </if>
            <if test="color != null and color != ''">
                and color = #{color}
            </if>
            <if test="number != null">
                and number = #{number}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="updatedDate != null">
                and updated_date = #{updatedDate}
            </if>
            <if test="deleteFlag != null">
                and delete_flag = #{deleteFlag}
            </if>
            <if test="version != null">
                and version = #{version}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user(tenant_id, user_name, pass_word, commodity, color,
                         number, price, create_date, updated_date, delete_flag,
                         version)
        values (#{tenantId}, #{userName}, #{passWord}, #{commodity}, #{color},
                #{number}, #{price}, #{createDate}, #{updatedDate},
                #{deleteFlag}, #{version})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        user(tenant_id,user_name,pass_word,commodity,color,number,price,create_date,updated_date,delete_flag,version)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tenantId},#{entity.userName},#{entity.passWord},#{entity.commodity},#{entity.color},#{entity.number},#{entity.price},#{entity.createDate},#{entity.updatedDate},#{entity.deleteFlag},#{entity.version})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into
        user(tenant_id,user_name,pass_word,commodity,color,number,price,create_date,updated_date,delete_flag,version)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tenantId},#{entity.userName},#{entity.passWord},#{entity.commodity},#{entity.color},#{entity.number},#{entity.price},#{entity.createDate},#{entity.updatedDate},#{entity.deleteFlag},#{entity.version})
        </foreach>
        on duplicate key update
        tenant_id = values(tenant_id),
        user_name = values(user_name),
        pass_word = values(pass_word),
        commodity = values(commodity),
        color = values(color),
        number = values(number),
        price = values(price),
        create_date = values(create_date),
        updated_date = values(updated_date),
        delete_flag = values(delete_flag)
        version = values(version)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="passWord != null and passWord != ''">
                pass_word = #{passWord},
            </if>
            <if test="commodity != null and commodity != ''">
                commodity = #{commodity},
            </if>
            <if test="color != null and color != ''">
                color = #{color},
            </if>
            <if test="number != null">
                number = #{number},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="updatedDate != null">
                updated_date = #{updatedDate},
            </if>
            <if test="deleteFlag != null">
                delete_flag = #{deleteFlag},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--全表修改数据-->
    <update id="fullTableUpdate">
        update user
        <set>
            <if test="tenantId != null">
                tenant_id = #{tenantId},
            </if>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="passWord != null and passWord != ''">
                pass_word = #{passWord},
            </if>
            <if test="commodity != null and commodity != ''">
                commodity = #{commodity},
            </if>
            <if test="color != null and color != ''">
                color = #{color},
            </if>
            <if test="number != null">
                number = #{number},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="updatedDate != null">
                updated_date = #{updatedDate},
            </if>
            <if test="deleteFlag != null">
                delete_flag = #{deleteFlag},
            </if>
            <if test="version != null">
                version = #{version},
            </if>
        </set>
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user where id = #{id}
    </delete>
</mapper>
