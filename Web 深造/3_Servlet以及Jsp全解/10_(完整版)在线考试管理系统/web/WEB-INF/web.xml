<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>com.example.controller.UserAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.example.controller.UserDeleteServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserFindServlet</servlet-name>
        <servlet-class>com.example.controller.UserFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAddServlet</servlet-name>
        <servlet-class>com.example.controller.QuestionAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionFindServlet</servlet-name>
        <servlet-class>com.example.controller.QuestionFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <servlet-class>com.example.controller.QuestionDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionFindByIdServlet</servlet-name>
        <servlet-class>com.example.controller.QuestionFindByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionUpdateServlet</servlet-name>
        <servlet-class>com.example.controller.QuestionUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionRandServlet</servlet-name>
        <servlet-class>com.example.controller.QuestionRandServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExamServlet</servlet-name>
        <servlet-class>com.example.controller.ExamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExamServlet</servlet-name>
        <url-pattern>/exam</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionRandServlet</servlet-name>
        <url-pattern>/question/rand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionUpdateServlet</servlet-name>
        <url-pattern>/question/update</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>QuestionFindByIdServlet</servlet-name>
        <url-pattern>/question/findById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <url-pattern>/question/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionFindServlet</servlet-name>
        <url-pattern>/question/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAddServlet</servlet-name>
        <url-pattern>/question/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>UserFindServlet</servlet-name>
        <url-pattern>/user/find</url-pattern>
    </servlet-mapping>


    <!--自定义默认欢迎资源文件规则-->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>


    <!--注册监听器接口实现类-->
    <listener>
        <listener-class>com.example.listener.OneListener</listener-class>
    </listener>

    <!--过滤器注册-->
    <filter>
        <filter-name>OneFilter</filter-name>
        <filter-class>com.example.filter.OneFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OneFilter</filter-name>
        <url-pattern>/*</url-pattern>  <!--表示的是所有文件都必须要进行过滤-->
    </filter-mapping>
</web-app>